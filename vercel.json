{
  "version": 2,
  "builds": [
    {
      "src": "packages/api/src/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/api/src/$1"
    }
  ]
}
